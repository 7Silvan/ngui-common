{
  "linterOptions": {
    "exclude": [
      "acceptance-report/**/*",
      "test-report/**/*",
      "app/dist/**/*",
      "documentation/**/*"
    ]
  },
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "jsRules": {
    "no-empty": true
  },
  "rules": {
    "angular-whitespace": [
      true,
      "check-interpolation"
    ],
    "component-selector": [
      true,
      "element", ["app", "ngui"],
      "kebab-case"
    ],
    "curly": [true, "ignore-same-line"],
    "directive-selector": [
      true,
      "attribute",
      [
        "app",
        "routerLink"
      ],
      "kebab-case"
    ],
    "newline-per-chained-call": false,
    "no-console": false,
    "no-dynamic-delete": false,
    "no-forward-ref": false,
    "no-unnecessary-class": false,
    "no-implicit-dependencies": false,
    "no-require-imports": false,
    "use-view-encapsulation": false,
    "i18n": false,
    "trackBy-function": false
  }
}
